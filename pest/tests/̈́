#include <Instruction.hpp>
#define BOOST_TEST_MODULE InstrTypeTest
#include <boost/test/unit_test.hpp>

BOOST_AUTO_TEST_CASE ( InstrTypeTestParsing )
{
    std::string input_1("mov fp,#0");
    Instruction instr_1(input_1, Instruction::InstrType::IntAlu);

    BOOST_CHECK_EQUAL(instr_1.getInstr()->compare("mov"), 0);
    BOOST_CHECK_EQUAL(instr_1.getNumOp(), 2);
    BOOST_CHECK_EQUAL(instr_1.getOp(1)->compare("fp"), 0);
    BOOST_CHECK_EQUAL(instr_1.getOp(2)->compare("#0"), 0);
    BOOST_CHECK_EQUAL(instr_1.getOp(3), (std::string*)NULL);
    BOOST_CHECK_EQUAL(instr_1.getExecType(), Instruction::InstrType::IntAlu);

}
